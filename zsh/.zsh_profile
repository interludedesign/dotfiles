#!/usr/bin/env zsh

source $HOME/.env
source $HOME/.alias
source $HOME/.paths

source_if_exists $HOME/.personal_config
source_if_exists $HOME/.work_config
source_if_exists $HOME/.cargo/env
source_if_exists $HOME/.fzf/shell/completion.zsh
source_if_exists $HOME/.fzf/shell/key-bindings.zsh
source_if_exists $HOME/.config/op/plugins.sh
source_if_exists $HOME/.vault
source_if_exists $HOMEBREW_PREFIX/etc/profile.d/z.sh



export EDITOR="nvim"

# Colorize man pages
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# Enable VIM mode (starts in insert mode)
bindkey -v
bindkey -v '^?' backward-delete-char

# Enable ctrl+r command searching (replaced with ripgrep)
# bindkey '^R' history-incremental-search-backward

# Fuzzy-find and cd to a dir in an array of givven $FINDER_DIRS
function finder() {
  local dirs=()
  for d in $FINDER_DIRS; do
    if test -d "$d"; then
      dirs+=("$d")
    fi
  done
  if [ ${#dirs[@]} -eq 0 ]; then
    echo "No directories found in \$FINDER_DIRS"
    return 1
  fi
  pushd $(find -L "${dirs[@]}" -type d -maxdepth 1 -mindepth 0 | fzf --reverse)
  detect_gemfile_mode
  redraw-prompt
}
zle -N finder finder
bindkey '^f' finder

redraw-prompt() {
  local precmd
  for precmd in $precmd_functions; do
    $precmd
  done
  zle reset-prompt
}

clean_text_files() {
  find . -type f \( -name "*.cs" -o -name "*.csproj" -o -name "*.sln" -o -name "*.txt" -o -name "*.md" -o -name "*.json" -o -name "*.xml" \) -exec sed -i '' $'s/\r//g; s/\ufeff//g' {} \;
  echo "Cleaned carriage returns and BOM from text files"
}

# Enable vi mode
set -o vi
