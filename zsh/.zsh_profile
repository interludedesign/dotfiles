#!/usr/bin/env zsh

source $HOME/.env
source $HOME/.alias
source $HOME/.paths

source_if_exists $HOME/.personal_config
source_if_exists $HOME/.work_config
source_if_exists $HOME/.cargo/env

export VIM="nvim"
export EDITOR=$VIM
export GIT_EDITOR=$VIM
export DOTFILES=$HOME/.dotfiles

# Colorize man pages
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# Enable VIM mode (starts in insert mode)
bindkey -v

# Enable ctrl+r command searching (replaced with ripgrep)
# bindkey '^R' history-incremental-search-backward

# Fuzzy-find and cd to a dir in an array of givven $FINDER_DIRS
function finder() {
	pushd $(find $FINDER_DIRS -type d -maxdepth 1 -mindepth 0 | fzf --reverse)
	detect_gemfile_mode
  redraw-prompt
}
zle -N finder finder
bindkey ^f finder

redraw-prompt() {
  local precmd
  for precmd in $precmd_functions; do
    $precmd
  done
  zle reset-prompt
}
